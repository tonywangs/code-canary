{
  "name": "dependency-canary",
  "version": "1.0.0",
  "description": "AI agent that audits project dependency graphs for vulnerabilities and supply-chain risks",
  "private": true,
  "packageManager": "pnpm@8.15.6",
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "clean": "pnpm -r clean",
    "seed:mock": "pnpm --filter @dependency-canary/agent seed:mock"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@types/node": "^20.11.24",
    "typescript": "^5.3.3",
    "vitest": "^1.3.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}